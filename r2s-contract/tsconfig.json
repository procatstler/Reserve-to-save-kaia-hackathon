{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "dist", "artifacts", "cache"],
  "include": ["./scripts", "./test", "./hardhat.config.ts", "./typechain-types"]
}